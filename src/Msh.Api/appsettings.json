{
    "ConnectionStrings": {
        "Redis": "localhost:6379"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Warning",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*",
    "Meilisearch": {
        "Url": "http://localhost:7700",
        "ApiKey": "devseguro",
        "IndexName": "produtos",
        "Configuration": {
            "RankingRules": [
                "words", // 1º: Quantidade de palavras batendo
                "typo", // 2º: Menor número de erros de digitação
                "proximity", // 3º: Palavras mais próximas uma da outra
                "attribute", // 4º: Ordem definida no SearchableAttributes
                "sort", // 5º: Caso você mande um Sort manual no código
                "exactness", // 6º: Palavras idênticas à busca
                "qtd_venda:desc", // REGRA EXTRA: Prioriza quem tem mais vendo (exemplo)
                "estoque:desc" // REGRA EXTRA: Prioriza quem tem estoque (exemplo)
            ],
            "SearchableAttributes": [
                "nome",
                "descricao",
                "marca",
                "tags"
            ],
            "FilterableAttributes": [
                "filtros_dinamicos",
                "marca",
                "categoria"
            ],
            "SortableAttributes": [
                "preco",
                "vendas_count",
                "estoque"
            ],
            "AttributesToRetrieve": [ "id", "nome", "codigo_barras", "preco", "marca", "estoque" ],
            //"Facets": [ "hierarquia_categoria", "tags", "preco", "lista", "marca", "embalagem" ],
            "Facets": {
                "hierarquia_categoria": "Categoria",
                "tags": "Tags",
                "preco": "Preço",
                "lista": "Lista",
                "marca": "Marca",
                "embalagem": "Embalagem"
            }
        }
    },
    "Cors": {
        "Name": "AllowSpecificOrigins",
        "AllowedOrigins": [
            "http://localhost:3000",
            "http://localhost:4200",
            "http://localhost:8080"
        ]
    },
    "RateLimit": {
        "Global": 150,
        "SearchEndpoint": 60
    }
} 
